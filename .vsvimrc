
" General rules
set backspace=indent,eol,start
set number relativenumber
set showcmd
set incsearch
set hlsearch
set nrformats=
set clipboard=unnamedplus
set cursorline
set laststatus=2
set ignorecase
let mapleader = " "



map K gt
map J gT
map <C-s> :w<CR>
inoremap jj <ESC>
inoremap <C-l> <Right>
inoremap <C-a> <C-o>$
inoremap <C-i> <C-o>0
nnoremap <leader>q :q<CR>
nnoremap <leader>w :w<CR>
nnoremap <leader>h :wincmd h<CR>
nnoremap <leader>j :wincmd j<CR>
nnoremap <leader>k :wincmd k<CR>
nnoremap <leader>l :wincmd l<CR>
nnoremap <leader>u :UndotreeShow<CR>
nnoremap <leader>j :wincmd j<CR>

" vsVim specific
nmap gcc :vsc Edit.ToggleLineComment<CR>
map <c-n> :vsc View.SolutionExplorer<CR>
nnoremap <Space>gd Edit.GoToImplementation<CR>
map <c-p> :vsc Edit.GoToFile<CR>
map <leader>rn :vsc Refactor.Rename<CR>
vmap gcc :vsc Edit.ToggleLineComment<CR>

